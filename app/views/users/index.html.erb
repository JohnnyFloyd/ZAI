<h1>Listing users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Username</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.name %></td>
      <td><%= link_to 'Pokaż', user %></td>
      <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
      <td><%= link_to 'Usuń', user, :confirm => 'Jesteś pewien?', :method => :delete %></td>
      <td><%= link_to 'Zaakceptuj', '#'%></td>
    </tr>
  <% end %>
</table>

<br />