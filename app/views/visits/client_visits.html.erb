<h1>Twoje wizyty</h1>

<table class="table table-striped">
  <tr>
    <th>Data</th>
    <th>Godzina</th>
    <th>Fryzjer</th>
    <th>Długość w godzinach</th>
    <th>Potwierdzone</th>
    <th></th>
  </tr>

<% for i in 0..(@visits.size-1) %>
  <tr>
    <td><%= @visits[i].visit_date %></td>
    <td><%= @hours[i].to_s(:time) %></td>
    <td><%= @hairdressers[i].name + " " + @hairdressers[i].surname %></td>
    <td><%= @visits[i].workhours.size%> </td>
    <td><%= @visits[i].confirmed ? "Tak" : "Nie"%></td>
    <td><%= link_to 'Pokaż', @visits[i] %></td>
  </tr>
<% end %>
</table>
