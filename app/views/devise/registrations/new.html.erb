<h2>Rejestracja</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label "Hasło" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label "Potwierdzenie hasła" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label "Imię" %><br />
  <%= f.text_field :name%></div>

  <div><%= f.label "Nazwisko" %><br />
  <%= f.text_field :surname %></div>

  <div><%= f.label "Numer telefonu" %><br />
  <%= f.text_field :cellphone %></div>
  
  <div><%= f.label "Zdjęcie" %><br />
  <%= f.file_field :avatar %></div>

  <div><%= f.submit "Utwórz konto" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
